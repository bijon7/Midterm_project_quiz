<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head',{title:'Private Quizzes'})  %>

  <body>
    <!-- As a link -->

    <%- include('partials/navbar', {isLoggedIn, user, links:[{title:'Home', path:'/'},{title:'Create Quiz', path:'/createquiz'},{title:'Scores', path:'/userScores'}]}) %>

    <%if(isLoggedIn){%>

    <fieldset class="questions-wrapper">
      <legend>User Quizzes (Private)</legend>
      <%for(let quiz of privateQuizzes){%>
      <form>
        <a href="<%='/api/quizzes/' + quiz.id %>"><%=quiz.title%></a>
        <%if(isLoggedIn){%>
        <button class="btn btn-primary quiz-button" type="submit">Edit</button>
        <button
          formmethod="get"
          formaction="<%='/api/quizzes/delete/' + quiz.id %>"
          class="btn btn-primary quiz-button"
          type="submit"
        >
          Delete
        </button>
        <%}%>
      </form>
      <%}%>
    </fieldset>

    <%}%>
  </body>
</html>
