<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<body>

  <%- include('partials/navbar', {isLoggedIn, user, links:[{title:'Private Quizzes', path:'/privatequiz'},{title:'Create Quiz', path:'/createquiz'},{title:'Scores', path:'/userScores'}]}) %>

  <%if(isLoggedIn){%>
  <fieldset class="questions-wrapper">
    <legend>Public Quizzes</legend>


    <%for(let quiz of publicQuizzes){%>
      <form>
        <!-- Uncomment <a href="api/quizzes"> once connected to backend -->
        <!-- <a href="<%='/api/quizzes/' + quiz.id %>"><%=quiz.title%></a> -->

        <!--  Remove <a href="/questions"> once connected to backend-->
        <a href="/questions"><%=quiz.title%></a>


        <%if(quiz.user_id == user.id){%>
          <button class="btn btn-primary quiz-button" type="submit">
            Edit
          </button>
          <button formmethod="get" formaction="<%='/api/quizzes/delete/' + quiz.id %>" class="btn btn-primary quiz-button"
            type="submit">
            Delete
          </button>
          <%}%>
      </form>
      <%}%>

  </fieldset>



  <fieldset class="questions-wrapper">
    <legend>User Quizzes (Private)</legend>
    <%for(let quiz of privateQuizzes){%>
      <form>
        <a href="<%='/api/quizzes/' + quiz.id %>"><%=quiz.title%></a>
        <%if(isLoggedIn){%>
          <button class="btn btn-primary quiz-button" type="submit">
            Edit
          </button>
          <button formmethod="get" formaction="<%='/api/quizzes/delete/' + quiz.id %>" class="btn btn-primary quiz-button"
            type="submit">
            Delete
          </button>
          <%}%>
      </form>
      <%}%>
  </fieldset>

  <%}%>
</body>

</html>
